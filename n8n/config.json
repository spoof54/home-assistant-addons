{
  "name": "n8n Automation Addon",
  "version": "1.0.1",
  "slug": "n8n",
  "description": "n8n - Workflow Automation Tool inside Home Assistant",
  "arch": ["amd64", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "ports": {
    "5678/tcp": 5678
  },
  "map": {
    "config": "rw",
    "data": "rw"
  },
  "options": {
    "host": "0.0.0.0",
    "protocol": "http",
    "port": 5678,
    "webhook_url": "http://localhost:5678/",
    "base_api": "/rest",
    "basic_auth_user": "admin",
    "basic_auth_password": "admin"
  },
  "schema": {
    "host": "str",
    "protocol": "str",
    "port": "int",
    "webhook_url": "str",
    "base_api": "str",
    "basic_auth_user": "str",
    "basic_auth_password": "str"
  },
  "icon": "local/n8n-color.svg"
}
